<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragments.CalculatorFragment">


    <TextView
        android:id="@+id/input_main"
        android:layout_alignParentTop="true"
        android:textColor="@color/textColor"
        android:textSize="60sp"
        android:hint="0"
        android:gravity="end"
        android:maxLines="1"
        android:fontFamily="@font/digital_7"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/result"
        android:layout_below="@+id/input_main"
        android:textColor="@color/textColor"
        android:textSize="40sp"
        android:text="@string/_0123456789"
        android:gravity="end"
        android:maxLines="1"
        android:maxLength="13"
        android:fontFamily="@font/digital_7"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="C"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="DEL"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_percentage"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="%"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_divide"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="/"
                tools:ignore="NestedWeights" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_seven"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="7"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_eight"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="8"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_nine"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="9"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="*"
                tools:ignore="NestedWeights" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_four"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="4"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_five"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="5"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_six"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="6"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="-"
                tools:ignore="NestedWeights" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_one"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="1"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="2"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_three"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_background_normal"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:textStyle="normal"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_add"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="+"
                tools:ignore="NestedWeights" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:id="@+id/button_zero"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="0"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_point"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="."
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/button_equal"
                android:layout_width="0dp"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_height="55dp"
                android:maxHeight="70dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:textStyle="normal"
                android:background="@drawable/button_background_normal"
                android:text="="
                tools:ignore="NestedWeights" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>